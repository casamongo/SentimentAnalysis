# Application
APP_NAME=SentimentAnalysis
APP_VERSION=1.0.0
DEBUG=true
API_V1_PREFIX=/api/v1
CORS_ORIGINS=["http://localhost:5173"]

# Database (PostgreSQL)
DATABASE_URL=postgresql+asyncpg://sentiment_user:sentiment_pass@localhost:5432/sentiment_db
DATABASE_SYNC_URL=postgresql://sentiment_user:sentiment_pass@localhost:5432/sentiment_db
DB_POOL_SIZE=20
DB_MAX_OVERFLOW=10

# Redis
REDIS_URL=redis://localhost:6379/0

# Celery
CELERY_BROKER_URL=redis://localhost:6379/1
CELERY_RESULT_BACKEND=redis://localhost:6379/2

# Refresh cycle
REFRESH_INTERVAL_MINUTES=15
FETCH_TIMEOUT_SECONDS=45
DATA_RETENTION_DAYS=90

# NLP
USE_FINBERT=false

# === API Keys ===

# Reddit (https://www.reddit.com/prefs/apps)
REDDIT_CLIENT_ID=
REDDIT_CLIENT_SECRET=
REDDIT_USER_AGENT=SentimentAnalysis/1.0

# NewsAPI (https://newsapi.org)
NEWSAPI_KEY=

# MediaStack (https://mediastack.com)
MEDIASTACK_KEY=

# Finnhub (https://finnhub.io)
FINNHUB_API_KEY=

# Alpha Vantage (https://www.alphavantage.co)
ALPHA_VANTAGE_KEY=

# Quiver Quantitative (https://www.quiverquant.com)
QUIVER_QUANT_KEY=

# Stocktwits
STOCKTWITS_TOKEN=

# Yahoo Finance
YAHOO_FINANCE_KEY=

# Google Trends (optional proxy)
GOOGLE_TRENDS_PROXY=

# GDELT
GDELT_BASE_URL=https://api.gdeltproject.org/api/v2
